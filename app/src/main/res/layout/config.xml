<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:text="Background Transparency (alpha 30–255)"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/seekAlpha" android:max="255"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtAlpha" android:text="220"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:text="Billing cycle reset day (1–31)"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <NumberPicker android:id="@+id/dayPicker"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="Monthly data cap (GB)"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <EditText android:id="@+id/editCap"
            android:inputType="numberDecimal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="12"/>

        <Switch
            android:id="@+id/switchAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable animations"
            android:checked="true"
            android:layout_marginTop="12dp"/>

        <Button android:id="@+id/btnSave" android:text="Save & Apply"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
